<div class="page-header">
  <%= link_to new_drink_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Drink
  <% end %>
  <h1>Listing drinks</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Memo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @drinks) do |drink| %>
			<td><%= image_tag drink.image.thumb.url %></td>
            <td><%= drink.name %></td>
            <td><%= drink.price %></td>
            <td><%= drink.memo %></td>
            <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
